<!DOCTYPE html>
<html lang="en" ng-app="account">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <% include ../base/static.ejs %>
</head>
<body>
<% include ../base/header.ejs %>
<!--login-->
<div class="container">
    <div class="panel panel-default login-panel">
        <div class="panel-heading">&nbsp;</div>
        <div class="panel-body">
            <form action="" method="post" class="text-center" id="form-login">
                <div class="form-group">
                    <label for="">邮箱</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="">密码</label>
                    <input type="password" class="form-control" name="passwd">
                </div>
                <div class="form-group">
                    <input type="checkbox" class="input-control">
                    <label for="">记住密码</label>
                    <a href="">注册</a>
                </div>
                <button class="btn btn-default btn-block" type="button" id="btn-login">登录</button>
            </form>
            <script>
                $('#btn-login').on('click', function() {
                    var info = $('#form-login').serialize();
                    $.ajax({
                        url: "/login",
                        type: 'post',
                        data: info,
                        success: function(response) {
                            if (response.login == 1) {
                                location.href = '/user';
                            } else {
                                alert('登录失败');
                            }

                            console.log(response);
                        },
                        error:function() {
                            console.log('failed');
                        }
                    });
                });
            </script>
        </div>
    </div>

</div>
<!--./login-->
<% include ../base/footer.ejs %>
</body>
</html>