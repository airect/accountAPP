<!DOCTYPE html>
<html lang="en" ng-app="account">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <% include ../base/static.ejs %>
</head>
<body>
<% include ../base/header.ejs %>
<!--login-->
<div class="container">
    <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <div class="panel panel-default login-panel">
                <div class="panel-heading">&nbsp;</div>
                <div class="panel-body">
                    <form action="" method="post" class="text-center" id="form-login">
                        <div class="form-group">
                            <label for="">用户名：</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label for="">密码：</label>
                            <input type="password" class="form-control" name="passwd">
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-6">
                                <input type="checkbox" class="input-control">
                                <label for="">记住密码</label>
                            </div>

                        </div>
                        <button class="btn btn-default btn-block" type="button" id="btn-login">登录</button>
                        <div class="form-group" style="text-align: right">
                            <a href="./reg">没有帐号？注册</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#btn-login').on('click', function() {
        var info = $('#form-login').serialize();
        $.ajax({
            url: "/login",
            type: 'post',
            data: info,
            success: function(response) {
                if (response.success) {
                    location.href = '/user';
                } else {
                    alert(response.msg);
                }

                console.log(response);
            },
            error:function() {
                console.log('failed');
            }
        });
    });
</script>
<!--./login-->
<% include ../base/footer.ejs %>
</body>
</html>