<!--login-->
<div class="container">
    <div class="panel panel-default login-panel">
        <div class="panel-heading">&nbsp;</div>
        <div class="panel-body">
            <form action="" method="post" class="text-center" id="form-login">
                <div class="form-group">
                    <label for="">邮箱</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="">密码</label>
                    <input type="password" class="form-control" name="passwd">
                </div>
                <div class="form-group">
                    <input type="checkbox" class="input-control">
                    <label for="">记住密码</label>
                    <a href="">注册</a>
                </div>
                <button class="btn btn-default btn-block" type="button" id="btn-login">登录</button>
            </form>
        </div>
    </div>

</div>
<!--./login-->
<!--logup-->
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">注册</div>
        <div class="panel-body">
            <form id="logup-form">
                <div class="form-group">
                    <label for="">邮箱：</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="">用户名：</label>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label for="">密码：</label>
                    <input type="password" class="form-control" name="passwd">
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-default" id="logup-btn">注册</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--./logup-->
<div class="container footer">
    <p class="text-center">记账</p>
</div>
<script>
    $('#btn-login').on('click', function() {
        var info = $('#form-login').serialize();
        $.ajax({
            url: "/login",
            type: 'post',
            data: info,
            success: function(response) {
                if (response.login == 1) {
                    location.href = '/user';
                } else {
                    alert('登录失败');
                }

                console.log(response);
            },
            error:function() {
                console.log('failed');
            }
        });
    });
</script>
<script>
    (function() {
        $("#logup-btn").on('click', function (){
            var form_data =  $('#logup-form').serialize();
            console.log(form_data);
            $.ajax({
                url: '/logup',
                data: form_data,
                type: 'post',
                success: function(res) {
                    if(res.error) {
                        alert('注册失败');
                    } else {
                        alert('注册成功');
                    }
                },
                error: function() {
                    alert('注册失败');
                }
            });
        });
    })();
</script>
